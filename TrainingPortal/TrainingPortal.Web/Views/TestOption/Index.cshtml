@model IEnumerable<TrainingPortal.Models.TestOption>

@{
    ViewBag.Title = "Test options";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { testId = Request.Params["testId"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IsChecked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IsChecked)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id, testId = Request.Params["testId"] }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id, testId = Request.Params["testId"] }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id, testId = Request.Params["testId"] })
        </td>
    </tr>
}

</table>
