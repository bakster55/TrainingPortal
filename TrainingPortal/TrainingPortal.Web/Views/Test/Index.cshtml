@model IEnumerable<TrainingPortal.Web.Business.Models.Test>

@{
    ViewBag.Title = "Tests";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { courseId = Request.Params["courseId"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id, courseId = Request.Params["courseId"] }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id, courseId = Request.Params["courseId"] }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id, courseId = Request.Params["courseId"] })
        </td>
    </tr>
}

</table>

<hr>

<p>
	@Html.ActionLink("Back to course", "Details", "Course", new { id = Request.Params["courseId"] }, null)
</p>